@inherits LayoutComponentBase

<MudThemeProvider />
<MudDialogProvider />
<MudSnackbarProvider />
<MudPopoverProvider />

<MudLayout>
  <MudAppBar Elevation="1">
    <MudButton Href="/" Variant="Variant.Text" Color="Color.Inherit" DisableRipple="true">
      <MudText Typo="Typo.h6">AI Workshop</MudText>
    </MudButton>
    <MudSpacer />
  </MudAppBar>
  <MudMainContent>
    <MudContainer MaxWidth="MaxWidth.Large" Class="my-4">
      @Body
    </MudContainer>
  </MudMainContent>
</MudLayout>

@code {
  private bool _drawerOpen = true;
  private string currentUser = "John Doe";

  private void ToggleDrawer()
  {
    _drawerOpen = !_drawerOpen;
  }

  private void DrawerOpenChanged(bool value)
  {
    _drawerOpen = value;
  }

  private void Logout()
  {
  }
}